
<div class="section">
	<%= simple_form_for @user do |f| %>
	<div class="field">
		<div class="control">
			<%= f.input :first_name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
		</div>
	</div>
	<div class="field">
		<div class="control">
			<%= f.input :last_name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
		</div>
	</div>
	<%= f.button :submit, class: 'button is-primary' %>

	<% end %>
</div>