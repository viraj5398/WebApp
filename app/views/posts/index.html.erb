<% content_for :page_title, "Blogs" %>

<section class="section">
	<div class="container">
		<% @posts.each do |post| %>
			<div class="card">
				<div class="card-content">
					<div class="media">
						<div class="media-content">
							<p class="title is-4"> <%= link_to post.title, post %></p>
						</div>
						<div class="body">
							<%= post.content %>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</section>